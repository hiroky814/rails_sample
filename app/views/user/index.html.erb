<div class="container">
  <h1 class="h1">検索機能</h1>
  <br><br>
  <div class="row">
    <div class="col-xs-4 col-xs-offset-1">
      <form action="search" method="GET">
        <div class="form-group">
          <label>名前</label>
          <input type="text" name="name" class="form-control" value="<%= @name %>" />
        </div>
        <br>
        <button class="btn btn-primary btn-block" type="submit">
          検索
        </button>
      </form>
    </div>
  </div>

  <br><hr><br>

  <div class="row">
    <% unless @user_list.empty? %>
      <table class="table">
        <tr class="bg-success">
          <th>名前</th>
          <th>年齢</th>
          <th>出身</th>
          <th>趣味</th>
        </tr>
        <% for val in @user_list do %>
          <tr>
            <td><%= val['name'] %></td>
            <td><%= val['age'] %></td>
            <td><%= val['graduate'] %></td>
            <td><%= val['hobby'] %></td>
          </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>

<script>
$(function(){
  clearActive();
  setActive("menuSearch");
});
</script>